<main class="userpost">
    <section>
        <div class="header">
            <h2>Create a post</h2>
        </div>

        <form class="form" action="/userpost" method="post">
            <div class="input">
                <label for="">Username: </label><br>
                <input id="username" type="text" name="username" placeholder="Username"><br>
                <p id="errorusername"></p>
            </div>

            <div class="input">
                <label for="">Email: </label><br>
                <input id="email" type="email" name="email" placeholder="Email"><br>
                <p id="erroremail"></p>
            </div>

            <div class="input">
                <label for="">Description: </label><br>
                <input id="description" type="text" name="description" placeholder="Description.."><br>
            </div>

            <div class="input">
                <label for="">Game: </label><br>
                <select name="game" id="game">
                    <option value="Elden Ring">Elden Ring</option>
                    <option value="Elden Ring">Grand Theft Auto Online</option>
                    <option value="Elden Ring">For Honor</option>
                    <option value="Elden Ring">Apex Legends</option>
                </select>
            </div>
            <div id="error"></div>
            <input type="submit" value="Post request">

        </form>
    </section>
</main>